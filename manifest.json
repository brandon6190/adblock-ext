{
  "name": "adblock-ext",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "This extension stops the browser from making request to an array of url ad companies",
  "homepage_url": "https://github.com/brandon6190/adblock-ext.git",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}